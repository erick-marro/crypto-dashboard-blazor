@inherits MarketsBase

@if (Markets == null)
{
    <p>Loading...</p>
}
else
{
    <MudTable Items="@Markets"  Hover="true" Bordered="true">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Markets</MudText>
            <MudSpacer />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Image</MudTh>
            <MudTh>Name</MudTh>
            <MudTh>Symbol</MudTh>
            <MudTh>Price</MudTh>
            <MudTh>Price Change 24h</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Image">
                <img src="@context.Image" width="35" height="35"/>
            </MudTd>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Symbol">@context.Symbol</MudTd>
            <MudTd DataLabel="CurrentPrice">$@context.Current_Price</MudTd>
            <MudTd DataLabel="PriceChange24H" Class="@(context.Price_Change_24H >= 0 ? "mud-success-text" : "mud-error-text")">@context.Price_Change_24H</MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
}

